<div class="bg-gray-50 min-h-screen">
  <div class="max-w-6xl mx-auto px-4 py-6">
    
    <!-- Breadcrumbs e Search -->
    <div class="mb-6">
      <nav class="mb-4">
        <div class="flex items-center space-x-2 text-sm text-gray-600">
          {{breadcrumbs}}
        </div>
      </nav>
      <div class="max-w-md">
        <div class="relative">
          <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          {{search scoped=settings.scoped_kb_search submit=false placeholder="Buscar artigos..."}}
        </div>
      </div>
    </div>

    <!-- Header da Seção -->
    <header class="bg-white rounded-lg border border-gray-200 shadow-sm mb-6">
      <div class="px-4 sm:px-6 py-6">
        <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-4">
          <div class="flex-1 min-w-0">
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900 leading-tight mb-2">{{section.name}}</h1>
            {{#if section.description}}
              <p class="text-gray-600 leading-relaxed">{{section.description}}</p>
            {{/if}}
          </div>
          {{#if settings.show_follow_section}}
            <div class="flex-shrink-0">
              <div class="section-subscribe">{{subscribe}}</div>
            </div>
          {{/if}}
        </div>
      </div>
    </header>

    <!-- Conteúdo Principal -->
    <div id="main-content" class="space-y-6">
      
      <!-- Subseções -->
      {{#if section.sections}}
        <section class="bg-white rounded-lg border border-gray-200 shadow-sm">
          <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Seções</h2>
          </div>
          <div class="divide-y divide-gray-200">
            {{#each section.sections}}
              <div class="hover:bg-gray-50 transition-colors">
                <a href="{{url}}" class="flex items-center justify-between px-4 sm:px-6 py-4 group">
                  <div class="flex items-center min-w-0 flex-1">
                    <div class="flex-shrink-0 mr-3">
                      <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                        <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                      </div>
                    </div>
                    <span class="text-gray-900 font-medium group-hover:text-blue-600 transition-colors truncate">{{name}}</span>
                  </div>
                  <div class="flex-shrink-0 ml-4">
                    <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </div>
                </a>
              </div>
            {{/each}}
          </div>
        </section>

        {{pagination "section.sections"}}
      {{/if}}

      <!-- Artigos -->
      {{#if section.articles}}
        <section class="bg-white rounded-lg border border-gray-200 shadow-sm">
          <div class="px-4 sm:px-6 py-4 border-b border-gray-200">
            <h2 class="text-lg font-semibold text-gray-900">Artigos</h2>
          </div>
          <div class="p-4 sm:p-6">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
              {{#each section.articles}}
                <article class="group border border-gray-200 rounded-lg p-4 hover:border-blue-300 hover:shadow-md transition-all duration-200">
                  <div class="flex items-start space-x-3">
                    {{#if promoted}}
                      <div class="flex-shrink-0 mt-1">
                        <div class="w-5 h-5 bg-yellow-100 rounded-full flex items-center justify-center">
                          <svg class="w-3 h-3 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                          </svg>
                        </div>
                      </div>
                    {{else}}
                      <div class="flex-shrink-0 mt-1">
                        <div class="w-5 h-5 bg-gray-100 rounded-full flex items-center justify-center">
                          <svg class="w-3 h-3 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                          </svg>
                        </div>
                      </div>
                    {{/if}}
                    
                    <div class="flex-1 min-w-0">
                      <div class="flex items-start justify-between">
                        <h3 class="flex-1 min-w-0">
                          <a href="{{url}}" class="text-sm font-medium text-gray-900 group-hover:text-blue-600 transition-colors line-clamp-2 leading-5">
                            {{title}}
                          </a>
                        </h3>
                        {{#if internal}}
                          <div class="flex-shrink-0 ml-2">
                            <div class="bg-gray-100 p-1 rounded">
                              <svg class="w-3 h-3 text-gray-500" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                              </svg>
                            </div>
                          </div>
                        {{/if}}
                      </div>
                      
                      {{#if promoted}}
                        <div class="mt-1">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                            Em destaque
                          </span>
                        </div>
                      {{/if}}
                    </div>
                  </div>
                </article>
              {{/each}}
            </div>
          </div>
        </section>

        {{pagination "section.articles"}}
      {{else}}
        <!-- Estado Vazio -->
        <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
          <div class="px-4 sm:px-6 py-12 text-center">
            <div class="mx-auto w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Nenhum artigo encontrado</h3>
            <p class="text-gray-600">
              <a href="{{section.url}}" class="text-blue-600 hover:text-blue-800">{{t 'empty'}}</a>
            </p>
          </div>
        </div>
      {{/if}}

      <!-- Ações de Navegação -->
      <div class="flex flex-col sm:flex-row justify-between items-center gap-4 pt-6">
        <div class="text-sm text-gray-500">
          {{#if section.articles}}
            Mostrando {{section.articles.length}} {{#if (compare section.articles.length ">" 1)}}artigos{{else}}artigo{{/if}}
          {{/if}}
        </div>
        
        <div class="flex items-center space-x-3">
          <a href="#" onclick="window.history.back(); return false;" class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Voltar
          </a>
          
          <a href="#" class="inline-flex items-center px-3 py-2 border border-transparent rounded-md text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16l-4-4m0 0l4-4m-4 4h18"></path>
            </svg>
            Página Inicial
          </a>
        </div>
      </div>
    </div>
  </div>
</div>