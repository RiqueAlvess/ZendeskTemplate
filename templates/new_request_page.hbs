<div class="bg-gray-50 min-h-screen">
  <div class="max-w-2xl mx-auto px-4 py-8">
    
    <!-- Breadcrumbs -->
    <nav class="mb-6">
      <div class="flex items-center space-x-2 text-sm text-gray-600">
        {{breadcrumbs}}
      </div>
    </nav>

    <!-- Search -->
    <div class="mb-8">
      <div class="relative bg-white border border-gray-200 rounded-lg overflow-hidden">
        <div class="flex items-center">
          <div class="pl-4 pr-2">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <div class="flex-1">
            {{search submit=false class="search w-full border-0 py-3 px-2 focus:outline-none focus:ring-0 bg-transparent"}}
          </div>
        </div>
      </div>
    </div>

    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-2">
        {{t 'submit_a_request'}}
      </h1>
      <p class="text-gray-600">
        Descreva sua solicitação para que possamos ajudar você
      </p>
    </div>

    <!-- Form Container -->
    <div class="bg-white rounded-lg border border-gray-200 shadow-sm">
      <div id="main-content" class="p-6">
        <div id="new-request-form">
          <!-- O formulário será renderizado aqui -->
        </div>
      </div>
    </div>

    <!-- Help Tips -->
    <div class="mt-8 bg-blue-50 rounded-lg p-6">
      <h3 class="text-sm font-medium text-blue-900 mb-3">Dicas para uma solicitação eficaz:</h3>
      <ul class="space-y-2 text-sm text-blue-800">
        <li class="flex items-start">
          <span class="w-1 h-1 bg-blue-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
          Seja específico sobre o problema
        </li>
        <li class="flex items-start">
          <span class="w-1 h-1 bg-blue-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
          Inclua capturas de tela se necessário
        </li>
        <li class="flex items-start">
          <span class="w-1 h-1 bg-blue-600 rounded-full mt-2 mr-3 flex-shrink-0"></span>
          Informações de contato atualizadas
        </li>
      </ul>
    </div>

    <!-- Quick Categories -->
    <div class="mt-8">
      <h3 class="text-lg font-medium text-gray-900 mb-4">Categorias frequentes</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
        <div class="text-center p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
          <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center mx-auto mb-2">
            <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Técnico</span>
        </div>
        
        <div class="text-center p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
          <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center mx-auto mb-2">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Conta</span>
        </div>
        
        <div class="text-center p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
          <div class="w-8 h-8 bg-yellow-100 rounded-lg flex items-center justify-center mx-auto mb-2">
            <svg class="w-4 h-4 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Billing</span>
        </div>
        
        <div class="text-center p-4 bg-white rounded-lg border border-gray-200 hover:border-blue-300 hover:bg-blue-50 transition-colors cursor-pointer">
          <div class="w-8 h-8 bg-gray-100 rounded-lg flex items-center justify-center mx-auto mb-2">
            <svg class="w-4 h-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-gray-700">Outros</span>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="module">
  import { renderNewRequestForm } from "new-request-form";

  const container = document.getElementById("new-request-form");
  const settings = {{json settings}};

  const props = {
    requestForm: {{json new_request_form}},
    newRequestPath: {{json (page_path 'new_request')}},
    parentId: {{json parent.id}},
    parentIdPath: {{json parent.url}},
    locale: {{json help_center.locale}},
    baseLocale: {{json help_center.base_locale}},
    hasAtMentions: {{json help_center.at_mentions_enabled}},
    userRole: {{json user.role}},
    userId: {{json user.id}},
    brandId: {{json brand.id}},
    organizations: {{json user.organizations}},
    wysiwyg: true,
    answerBotModal: {
      answerBot: {{json answer_bot}},
      hasRequestManagement: {{json help_center.request_management_enabled}},
      isSignedIn: {{json signed_in}},
      helpCenterPath: {{json (page_path 'help_center')}},
      requestsPath: {{json (page_path 'requests')}},
      requestPath: {{json (page_path 'request' id=answer_bot.request_id)}}
    },
  };

  renderNewRequestForm(settings, props, container);
</script>