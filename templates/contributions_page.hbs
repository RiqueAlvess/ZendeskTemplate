<div class="bg-gray-50 min-h-screen">
  <div class="bg-white border-b border-gray-200 sticky top-16 z-30">
    <div class="max-w-6xl mx-auto px-4">
      <nav class="flex items-center space-x-6 h-14 overflow-x-auto">
        <a href="{{page_path 'contributions'}}" class="flex-shrink-0 px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded-md" aria-current="page">
          {{t 'contributions'}}
        </a>
        <a href="{{page_path 'subscriptions'}}" class="flex-shrink-0 px-4 py-2 text-sm font-medium text-gray-600 hover:text-blue-600 hover:bg-gray-50 rounded-md transition-colors">
          {{t 'following'}}
        </a>
      </nav>
    </div>
  </div>

  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8">
      <div class="lg:w-64 flex-shrink-0">
        <div class="bg-white rounded-lg border border-gray-200 p-4">
          <h3 class="text-sm font-medium text-gray-900 mb-3">Filtrar por tipo</h3>
          <nav class="space-y-1">
            {{#each filters}}
              {{#if selected}}
                <a href="{{url}}" class="block px-3 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-md border-l-2 border-blue-600" aria-current="page">
                  {{name}}
                </a>
              {{else}}
                <a href="{{url}}" class="block px-3 py-2 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50 rounded-md transition-colors">
                  {{name}}
                </a>
              {{/if}}
            {{/each}}
          </nav>
        </div>
      </div>

      <div class="flex-1 min-w-0">
        <div class="bg-white rounded-lg border border-gray-200">
          <div class="px-6 py-4 border-b border-gray-200">
            <h1 class="text-xl font-semibold text-gray-900">{{t 'contributions'}}</h1>
            <p class="text-sm text-gray-600 mt-1">Suas contribuições na plataforma</p>
          </div>

          <div id="main-content" class="requests">
            {{#if contributions}}
              <div class="overflow-x-auto">
                <table class="w-full">
                  <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{t 'title'}}
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden sm:table-cell">
                        {{t 'type'}}
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden md:table-cell">
                        {{t 'vote_sum'}}
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                        {{t 'last_activity'}}
                      </th>
                      <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden xl:table-cell">
                        {{t 'created'}}
                      </th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-gray-200">
                    {{#each contributions}}
                      <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4">
                          <div class="flex items-start space-x-3">
                            <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                              <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                              </svg>
                            </div>
                            <div class="min-w-0 flex-1">
                              <a href="{{url}}" class="text-sm font-medium text-gray-900 hover:text-blue-600 transition-colors line-clamp-2">
                                {{excerpt title characters=60}}
                              </a>
                              <div class="mt-1 flex flex-wrap gap-2 text-xs text-gray-500 sm:hidden">
                                <span class="inline-flex items-center px-2 py-1 bg-gray-100 rounded-md">{{type}}</span>
                                <span>{{vote_sum}} votos</span>
                                <span>{{date last_activity_at}}</span>
                              </div>
                            </div>
                          </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600 hidden sm:table-cell">
                          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            {{type}}
                          </span>
                        </td>
                        <td class="px-6 py-4 text-sm hidden md:table-cell">
                          <div class="flex items-center space-x-1">
                            <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                            </svg>
                            <span class="font-medium text-gray-900">{{vote_sum}}</span>
                          </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">
                          {{date last_activity_at}}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-600 hidden xl:table-cell">
                          {{date created_at}}
                        </td>
                      </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            {{else}}
              <div class="text-center py-16">
                <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
                <h3 class="text-lg font-medium text-gray-900 mb-2">{{t 'no_contributions'}}</h3>
                <p class="text-gray-600 mb-6">Você ainda não fez nenhuma contribuição</p>
                <div class="space-x-3">
                  {{#link 'community' class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors"}}
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                    </svg>
                    Explorar Comunidade
                  {{/link}}
                  {{#link 'new_request' class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors"}}
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                    Nova Solicitação
                  {{/link}}
                </div>
              </div>
            {{/if}}
          </div>

          {{#if contributions}}
            <div class="px-6 py-4 border-t border-gray-200">
              {{pagination}}
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>